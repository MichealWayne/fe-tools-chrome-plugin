{
  "manifest_version": 2,
  "name": "fe-tools",
  "version": "1.3.0",
  "description": "前端开发的插件集合工具。",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "前端开发的插件集合工具。",
    "default_popup": "index.html"
  },
  "homepage_url": "https://github.com/MichealWayne/fe-tools",
  "permissions": [
    "contextMenus",
    "tabs",
    "bookmarks",
    "webRequest",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "omnibox": { "keyword": "fe" },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content-script.js"]
    }
  ]
}
